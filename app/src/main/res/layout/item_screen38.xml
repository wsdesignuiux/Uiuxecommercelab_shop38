<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:paddingTop="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp">

        <ImageView
            android:id="@+id/imgpicgiral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/picgiral"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv1"
                    android:fontFamily="@font/arialmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_black"
                    android:letterSpacing="0.8"
                    android:paddingBottom="6.5dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:paddingTop="6.5dp"
                    android:text="JACKET"
                    android:textColor="#ffffff"
                    android:textSize="5.5sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:src="@drawable/more" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="65dp"
            android:lineSpacingExtra="4dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/sfnsdisplay"
            android:text="Very nice dress, nice soft fabric. High quality sewn."
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profileimage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/men"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0dp" />


            <TextView
                android:id="@+id/tv3"
                android:fontFamily="@font/sfnsdisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="Jennifer Horn"
                android:textColor="#ffffff"
                android:textSize="11.5sp" />

            <TextView
                android:id="@+id/tv4"
                android:fontFamily="@font/arialmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="12dp"
                android:text="13:12 PM, MONDAY"
                android:textColor="#ffffff"
                android:textSize="8.5sp" />
        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/rect_gray"
        android:padding="12.5dp">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/like"/>

        <TextView
            android:fontFamily="@font/arialmt"
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="279"
            android:textSize="8sp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:tint="#bdbdbd"/>

        <TextView
            android:id="@+id/tv6"
            android:fontFamily="@font/arialmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="324"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textSize="8sp"
            android:textColor="#000000" />


        <FrameLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/men"
                app:civ_border_color="#ffffff"
                app:civ_border_width="0.9dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/men"
                android:layout_marginLeft="15dp"
                app:civ_border_color="#ffffff"
                app:civ_border_width="0.9dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/men"
                android:layout_marginLeft="30dp"
                app:civ_border_color="#ffffff"
                app:civ_border_width="0.9dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/men"
                android:layout_marginLeft="45dp"
                app:civ_border_color="#ffffff"
                app:civ_border_width="0.9dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/men"
                android:layout_marginLeft="60dp"
                app:civ_border_color="#ffffff"
                app:civ_border_width="0.9dp" />

        </FrameLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forward"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:tint="#bdbdbd"/>

        <TextView
            android:id="@+id/tv7"
            android:fontFamily="@font/arialmt"
            android:layout_marginRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="34"
            android:layout_gravity="center|end"
            android:textSize="10sp"
            android:textColor="#000000"/>
    </LinearLayout>

</LinearLayout>